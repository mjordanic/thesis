issn = {02680033},
journal = {Clinical Biomechanics},
keywords = {EMG amplifiers,Electrode arrays,Electrode noise,Electrode-skin impedance,Spatial filtering,Surface EMG,Surface EMG signal conditioning},
number = {2},
pages = {122--134},
pmid = {19042063},
title = {{Technology and instrumentation for detection and conditioning of the surface electromyographic signal: State of the art}},
