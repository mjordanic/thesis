journal = {Computational and Structural Biotechnology Journal},
pages = {75--85},
pmid = {28018557},
publisher = {Research Network of Computational and Structural Biotechnology},
title = {{A Hybrid Computer-aided-diagnosis System for Prediction of Breast Cancer Recurrence (HPBCR) Using Optimized Ensemble Learning}},
